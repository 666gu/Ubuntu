wget https://raw.githubusercontent.com/wahasa/Ubuntu/main/Install/ubuntu23.10.sh ; chmod +x ubuntu23.10.sh ; bash ubuntu23.10.sh
        ;;
        "Ubuntu23.04")
wget https://raw.githubusercontent.com/wahasa/Ubuntu/main/Install/ubuntu23.04.sh ; chmod +x ubuntu23.04.sh ; bash ubuntu23.04.sh
        ;;
        "Ubuntu22.10")
wget https://raw.githubusercontent.com/wahasa/Ubuntu/main/Install/ubuntu22.10.sh ; chmod +x ubuntu22.10.sh ; bash ubuntu22.10.sh
	;;
        "Ubuntu22.04")
wget https://raw.githubusercontent.com/wahasa/Ubuntu/main/Install/ubuntu22.04.sh ; chmod +x ubuntu22.04.sh ; bash ubuntu22.04.sh
