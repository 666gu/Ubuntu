printf "${blu}Version ${red}: ${grn}Beta 23.10\n"
printf "${blu}Code    ${red}: ${grn}Mantic Minotaur\n"
printf "${blu}Rootfs  ${red}: ${grn}Armhf,Arm64,Amd64"
